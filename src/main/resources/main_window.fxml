      fx:controller="filetransfer.controllers.MainController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="460.0" prefWidth="742.0" VBox.vgrow="ALWAYS">
            <children>
                <Pane layoutX="14.0" layoutY="14.0" prefHeight="61.0" prefWidth="792.0">
                    <children>
                        <GridPane prefHeight="90.0" prefWidth="792.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="402.0" minWidth="10.0"
                                                   prefWidth="372.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="555.0" minWidth="10.0"
                                                   prefWidth="296.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="396.0" minWidth="6.0" prefWidth="51.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="318.0" minWidth="0.0" prefWidth="47.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label id="test" fx:id="deviceInfo" text="Device-Info" GridPane.rowIndex="1"/>

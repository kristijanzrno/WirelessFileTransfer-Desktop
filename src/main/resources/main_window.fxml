<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="564.0" prefWidth="813.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="filetransfer.controllers.MainController" fx:id="mainWindow">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="460.0" prefWidth="742.0" VBox.vgrow="ALWAYS">
            <children>
                <Pane layoutY="-2.0" prefHeight="66.0" prefWidth="813.0"
                      style="-fx-background-color: rgb(255,255,255);">
                    <children>
                        <Label id="test" fx:id="deviceInfo" alignment="TOP_LEFT" contentDisplay="TOP" layoutX="14.0"
                               layoutY="23.0" text="Device-Info">
                            <opaqueInsets>
                                <Insets left="50.0"/>
                            </opaqueInsets>
                            <font>
                                <Font name="System Font" size="16.0"/>
                            </font>
                        </Label>
                        <Label id="status" fx:id="deviceStatus" layoutX="325.0" layoutY="23.0"
                               text="Waiting for connection...">
                            <font>
                                <Font name="System Bold Italic" size="16.0"/>
                            </font>
                        </Label>
                        <Button layoutX="691.0" layoutY="8.0" mnemonicParsing="false" onAction="#onQRButtonClicked"
                                style="-fx-background-color: #FFFFFF;" textFill="WHITE">
                            <graphic>
                                <ImageView fitHeight="34.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@qr.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button layoutX="745.0" layoutY="9.0" mnemonicParsing="false"
                                onAction="#onSettingsButtonClicked" style="-fx-background-color: #FFFFFF;">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@settings.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="disconnectButton" layoutX="637.0" layoutY="8.0" mnemonicParsing="false"
                                onAction="#onDisconnectButtonClicked"
                                style="-fx-background-color: #FFFFFF; -fx-border-color: #FFFFFF;">
                            <graphic>
                                <ImageView fitHeight="34.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@disconnect2.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </Pane>
                <Label fx:id="mainMessage" alignment="CENTER" layoutX="38.0" layoutY="245.0" prefHeight="66.0"
                       prefWidth="748.0" style="&#10;" text="Connect with a device to start transferring files!"
                       textAlignment="CENTER" textFill="#9f9f9f" wrapText="false">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</VBox>

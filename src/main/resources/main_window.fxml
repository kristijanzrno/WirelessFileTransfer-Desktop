<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="564.0" prefWidth="813.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="filetransfer.controllers.MainController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="460.0" prefWidth="742.0" VBox.vgrow="ALWAYS">
            <children>
                <Pane layoutY="-2.0" prefHeight="66.0" prefWidth="813.0"
                      style="-fx-background-color: rgb(33,150,243)rgb(33,150,243);">
                    <children>
                        <GridPane prefHeight="66.0" prefWidth="813.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="402.0" minWidth="10.0"
                                                   prefWidth="310.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="555.0" minWidth="10.0"
                                                   prefWidth="389.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="396.0" minWidth="6.0" prefWidth="51.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="318.0" minWidth="0.0" prefWidth="47.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label id="test" fx:id="deviceInfo" alignment="TOP_LEFT" contentDisplay="TOP"
                                       text="Device-Info" textFill="WHITE" GridPane.rowIndex="1">
                                    <opaqueInsets>
                                        <Insets left="50.0"/>
                                    </opaqueInsets>
                                    <font>
                                        <Font name="System Font" size="16.0"/>
                                    </font>
                                </Label>
                                <Label id="status" text="Waiting for connection..." textFill="WHITE"
                                       GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="System Bold Italic" size="16.0"/>
                                    </font>
                                </Label>
                                <Button mnemonicParsing="false" onAction="#onQRButtonClicked" text="Button"
                                        GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                                <Button mnemonicParsing="false" onAction="#onSettingsButtonClicked" text="Button"
                                        GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                    </children>
                </Pane>
                <Label alignment="CENTER" layoutX="246.0" layoutY="245.0" prefHeight="66.0" prefWidth="352.0"
                       style="&#10;" text="Connect with a device to start transferring files!" textAlignment="CENTER"
                       textFill="#9f9f9f" wrapText="false">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</VBox>
